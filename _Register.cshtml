@{
    Layout = null;
}


@model RegisterViewModel

<div class="card-body">
    <h3 class="card-title">ثبت نام</h3>
    <form asp-action="RegisterConfirm" asp-controller="Account">
        <div class="form-group">
            <label>آدرس ایمیل</label>
            <input asp-for="username" type="email" class="form-control" placeholder="ایمیل را وارد کنید">
        </div>
        <div class="form-group">
            <label>رمز عبور</label>
            <input asp-for="password" type="password" class="form-control" placeholder="رمز عبور را وارد کنید">
        </div>
        <div class="form-group">
            <label>تکرار رمز عبور</label>
            <input asp-for="repassword" type="password" class="form-control" placeholder="رمز عبور را وارد کنید">
            <span asp-validation-for="repassword"></span>
        </div>
        <div class="form-group">
            <label>نام کاربر</label>
            <input asp-for="firstname" type="text" class="form-control" placeholder="نام خود را وارد کنید">
        </div>
        <div class="form-group">
            <label>نام خانوادگی کاربر</label>
            <input asp-for="lastname" type="text" class="form-control" placeholder="نام خانوادگی خود را وارد کنید">
        </div>
        <button type="submit" class="btn btn-primary mt-4">ثبت نام</button>
    </form>
</div>