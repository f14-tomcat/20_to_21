@{
    ViewData["Title"] = "Insert";
}

@model ProductViewModel


<div class="card-body">
    <h3 class="card-title">ورود کالا</h3>
    <form class="col-6" asp-action="InsertConfirm" asp-controller="Product" method="post"
          enctype="multipart/form-data">
        <div class="form-group">
            <label>نام کالا</label>
            <input asp-for="name" type="text" class="form-control" placeholder="نام کالا را وارد کنید">
        </div>
        <div class="form-group">
            <label>قیمت کالا</label>
            <input asp-for="price" type="text" class="form-control" placeholder="قیمت کالا را وارد کنید">
        </div>
        <div class="form-group">
            <label>تعداد کالا</label>
            <input asp-for="count" type="text" class="form-control" placeholder="تعداد کالا را وارد کنید">
        </div>
        <div class="custom-file">
            <input asp-for="img" type="file" class="custom-file-input">
            <label class="custom-file-label">انتخاب تصویر کالا</label>
        </div>
        <button type="submit" class="btn btn-primary mt-4">ذخیره کالا</button>
    </form>
</div>
